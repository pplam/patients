<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>Medical record</th>
      <th>Full name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Status</th>
      <th>Viewed count</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= mr(patient.id) %></td>
        <td><%= full_name(patient.first_name, patient.middle_name, patient.last_name) %></td>
        <td><%= age(patient.date_of_birth) %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.status %></td>
        <td><%= patient.viewed_count %></td>
        <td><%= link_to patient.location.name, patient.location %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path %> |
<%= link_to 'Locations', locations_path %> |
